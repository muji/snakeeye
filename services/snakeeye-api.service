[Unit]
Description=SnakeEye API
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/opt/snakeeye/utzo_camera_api
Environment="PATH=/opt/snakeeye/venv/bin:/usr/bin:/bin"
# IMPORTANT: no --reload in service
ExecStart=/opt/snakeeye/venv/bin/python -m uvicorn run:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
